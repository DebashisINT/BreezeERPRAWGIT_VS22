                    $.confirm({
                        title: 'Success',
                        content: 'Leave applied successfully',
                            icon: 'fa fa-smile-o',
                            theme: 'modern',
                            closeIcon: true,
                            animation: 'scale',
                            type: 'blue',
                        });
                    GetAllLeaves()
                }
            }
        });
    }
